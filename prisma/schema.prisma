generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int            @id @default(autoincrement())
  name           String
  email          String         @unique
  phone          String         @db.Char(11)
  password       String
  city           String
  state          String
  active_user    Boolean        @default(true)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  books          Book[]
  favorite_books FavoriteBook[]

  @@map("users")
}

model Book {
  id             Int            @id @default(autoincrement())
  title          String
  author         String
  gender         String[]
  available      Boolean        @default(true)
  user           User           @relation(fields: [user_id], references: [id])
  user_id        Int
  favorite_books FavoriteBook[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@map("books")
}

model FavoriteBook {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [user_id], references: [id])
  user_id   Int
  book      Book     @relation(fields: [book_id], references: [id])
  book_id   Int
  favorite  Boolean  @default(true)
  title     String
  author    String
  gender    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("favorite_books")
}
